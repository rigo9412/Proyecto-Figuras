<Window x:Name="form" x:Class="GraficacionWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraficacionWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="600">
    <Grid>
        <Canvas x:Name="canvas1" Width="590" Height="316">
            <Rectangle Canvas.Left="10" Canvas.Right="0" Canvas.Top="70" Height="2" Width="2" Fill="Black"/>
            <TextBox x:Name="txtRadio" Height="23" Canvas.Left="51" TextWrapping="Wrap" Text="50" Canvas.Top="10" Width="120"/>
            <Label x:Name="label" Content="Radio" Canvas.Left="8" Canvas.Top="7"/>
            <TextBox x:Name="txtXo" Height="23" Canvas.Left="213" TextWrapping="Wrap" Text="100" Canvas.Top="10" Width="60"/>
            <Label x:Name="label_Copy" Content="Xo" Canvas.Left="189" Canvas.Top="7"/>
            <TextBox x:Name="txtYo" Height="23" Canvas.Left="307" TextWrapping="Wrap" Text="100" Canvas.Top="11" Width="60"/>
            <Label x:Name="label_Copy1" Content="Yo" Canvas.Left="278" Canvas.Top="7"/>
            <Button x:Name="btnGraficar" Content="Graficar" Canvas.Left="380" Canvas.Top="14" Width="75" Click="btnGraficar_Click"/>
        </Canvas>
    </Grid>
</Window>
 